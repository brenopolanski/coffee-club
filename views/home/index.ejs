<% include ../header %>
	<header>
		<h1>Hackspace</h1>
		<h4>The Coffee Club</h4>
	</header>
	<section>
		<ul>
			<li>Name: <%- name %></li>
			<li>avatar_url: <img src="<%- profile_image %>" width="100" height="100" /></li>
		</ul>
		<table>
			<thead>
				<tr>
					<th>Date</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<% coffees.forEach(function(coffee) { %>
					<tr>
						<td><%- coffee.date %></td>
						<td><%- coffee.amount %></td>
					</tr>
				<% }); %>
			</tbody>
			<tfoot>
				<tr>
					<td>Totals:</td>
					<td><%- coffees.length %></td>
				</tr>
			</tfoot>
		</table>
		<a href="/coffee/<%- _id %>">Add Coffee</a> | <a href="/coffee/guest/<%- _id %>">Add guest friend Hackspace</a> | <a href="/exit">Exit</a>
	</section>
<% include ../footer %>