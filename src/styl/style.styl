*, *:before, *:after
	box-sizing inherit

html
	box-sizing border-box
	font-size 10px
	
body
	font-family sans-serif
	margin 0
	font-size 1.5rem
	
a
	color white
	text-decoration none
	
	&.button
		background #75715e
		padding 1rem 1.5rem
		border-radius 4px
		
	&.login
		padding 2rem 2.5rem
		font-size 2.5rem

h1
	color #75715e

.app-wrap
	height 100vh

.header
	background #272822
	color rgba(0,0,0,0.5)
	padding 1rem
	img
		max-width 10vh

.content
	height 100vh
	padding 20px
	background #f0f0f0
	box-shadow inset 0 5px 0 rgba(0,0,0,0.1)
	line-height 1.6
	
.nav
	border-top 1px solid #e6e6e6
	
.nav
	a
		text-align center
		padding 1.5rem
		border-left 1px solid rgba(0,0,0,0.5)
		background #272822
		color #75715e
		
		&:first-child
			border-left 0
			border-bottom 5px solid #272822
			
		&:hover
			border-bottom 5px solid rgba(0,0,0,0.5)
			
	i
		display block
		font-size 2.5rem
		color white
		text-shadow 3px 3px 0 rgba(0,0,0,0.1)
		padding-bottom 1rem
		
.footer
	background #272822
	
.footer
	p
		color #fff
	
.love
	color #e74c3c
	display inline-block
	font-size 1.4em
	position relative
	top 0.2em
	transform scale(0.9)
	animation love 0.5s infinite linear alternate-reverse

@keyframes love {
    to { transform: scale(1.2); }
}

.app-wrap
	display flex
	flex-direction column
	
.app-wrap > *
	flex 1 1 auto

.header
	display flex
	align-items center
	justify-content space-between
	
.content
	overflow-y scroll
	-webkit-overflow-scrolling touch
	
.container-center
	display flex
	align-items center
	justify-content center

.nav
	display flex
	
	a
		flex 1
		
// Small screens

@media all and (max-width: 500px)
	.home-title
		display none